# ===========================================
# Clawdbot Docker - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# --- Required ---

# Anthropic API Key (Claude models)
ANTHROPIC_API_KEY=sk-ant-your-key-here

# Gateway auth token (generate a random one)
# Example: openssl rand -hex 24
GATEWAY_AUTH_TOKEN=your-random-token-here

# --- Channels (enable at least one) ---

# Telegram Bot Token (from @BotFather)
TELEGRAM_BOT_TOKEN=

# --- Optional ---

# OpenAI API Key (for Codex CLI, Whisper, etc)
OPENAI_API_KEY=

# Brave Search API Key (for web search)
BRAVE_API_KEY=

# Gateway port (default: 18789)
GATEWAY_PORT=18789

# Log level: trace | debug | info | warn | error
LOG_LEVEL=info
